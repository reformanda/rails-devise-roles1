<%= render "shared/usaasc_head" %>

<div class="row">
    <div class="col-lg-4 col-lg-offset-4">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Sign in</h5>
            </div>
            <div class="ibox-content">

<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f| %>
    <h3>Forgot your password?</h3>
    <p>We'll send password reset instructions.</p>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
     <%= f.submit 'Reset Password', :class => 'btn btn-primary' %>
  <% end %>
</div>
</div>
</div>
</div>
</div>
