<div class="row  white-bg page-heading">
    <div class="col-lg-8 col-lg-offset-1">
        <h2>USAASC Virtual Boards</h2>
        <ol class="breadcrumb">
            <li>
                <a href="<%= url_for :controller => 'landing', :action => 'index' %>">Home</a>
            </li>
            <li>
            <a>Nomination Types</a>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    <div class="title-action">
        <%= link_to '/users/sign_out', :method => :delete do %><i class="fa fa-sign-out"></i> Signoff<% end %>
    </div>
    </div>
</div>

<div class="row page-heading">
</div>

<p id="notice"><%= notice %></p>

<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
<div class="col-lg-12">
<div class="ibox float-e-margins">
<div class="ibox-title">
    <h5>Nomination Types</h5>
    <div class="ibox-tools">
        <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
        </a>
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <i class="fa fa-wrench"></i>
        </a>
        <ul class="dropdown-menu dropdown-user">
            <li>
                <a href="#">Config option 1</a>
            </li>
            <li>
                <a href="#">Config option 2</a>
            </li>
        </ul>
        <a class="close-link">
            <i class="fa fa-times"></i>
        </a>
    </div>
</div>
<div class="ibox-content">

<table class="table table-striped table-bordered table-hover dataTables-example">
  <thead>
    <tr>
      <th>Year</th>
      <th>Code</th>
      <th>Description</th>
      <th>Awards announcement</th>
      <th>Implementing instructions</th>
      <th>Submission form</th>
      <th>Award narrative</th>
      <th>Guidelines</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nomination_types.each do |nomination_type| %>
      <tr>
        <td><%= nomination_type.year %></td>
        <td><%= nomination_type.code %></td>
        <td><%= nomination_type.description %></td>
        <td><%= link_to "Download", nomination_type.awards_announcement_url %></td>
        <td><%= nomination_type.implementing_instructions %></td>
        <td><%= nomination_type.submission_form %></td>
        <td><%= nomination_type.award_narrative %></td>
        <td><%= nomination_type.guidelines %></td>
        <td><%= link_to 'Show', nomination_type %></td>
        <td><%= link_to 'Edit', edit_nomination_type_path(nomination_type) %></td>
        <td><%= link_to 'Destroy', nomination_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
</div>
</div>



