<div class="row  white-bg page-heading">
    <div class="col-lg-8 col-lg-offset-1">
        <h2>USAASC Virtual Boards <%= ENV["APP_VERSION"] %></h2>
        <ol class="breadcrumb">
            <li>
                <a href="<%= url_for :controller => 'landing', :action => 'index' %>">Home</a>
            </li>
            <li>
              <%= link_to 'Manage Nominations', :action => "index" %>
            </li>
        <li class="active">
            <strong>Show</strong>
        </li>
        </ol>
    </div>
    <div class="col-lg-2">
    <div class="title-action">
        <%= link_to '/users/sign_out', :method => :delete do %><i class="fa fa-sign-out"></i> Signoff<% end %>
    </div>
    </div>
</div>

<div class="row page-heading">
</div>

<div class="row">
    <div class="col-lg-10 col-lg-offset-1">
      <p id="notice"><%= notice %></p>
    </div>
</div>

<div class="row">
    <div class="col-lg-10 col-lg-offset-1">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Manage Nomination Options</h5>
            </div>
            <div class="ibox-content">
              <i>Manage Nomination options here ...</i>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-10 col-lg-offset-1">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Update Nomination Form</h5>
            </div>
            <div class="ibox-content">

            <%= form_for @nomination, url: "#{@callback}", method: "post", html: {class: "form-horizontal"} do |f| %>

              <%= render :partial => "shared/nomination_base", locals: { f: f} %>

              <div class="hr-line-dashed"></div>
              <div class="form-group">
                  <div class="col-sm-12">
                      <button class="btn btn-primary" type="submit">Update Nomination</button>
                      <button class="btn btn-white" type="reset">Cancel</button>
                  </div>
              </div>

            <% end %>

            </div>
        </div>
    </div>
</div>
