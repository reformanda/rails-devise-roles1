<div class="row  white-bg page-heading">
    <div class="col-lg-8 col-lg-offset-1">
        <%= render "shared/usaasc_vb" %>
        <ol class="breadcrumb">
            <li>
                <a href="<%= url_for :controller => 'landing', :action => 'index' %>">Home</a>
            </li>
            <li class="active">
            <strong>Score Types</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    <div class="title-action">
        <%= link_to '/users/sign_out', :method => :delete do %><i class="fa fa-sign-out"></i> Signoff<% end %>
    </div>
    </div>
</div>

<div class="row page-heading">
</div>

<div class="row">
    <div class="col-lg-10 col-lg-offset-1">
      <p id="notice"><%= notice %></p>
    </div>
</div>



<div class="row">
<div class="col-lg-10 col-lg-offset-1">
<div class="ibox float-e-margins">
<div class="ibox-title">
    <h5>Score Types</h5>
    <br/>
    <br/>
    <p><strong>NOTE:  You should only modify the instructions here as the actual scoring page is custom-designed</strong></p>

    <div class="title-action">

    </div>
</div>
<div class="ibox-content">

<table class="table table-striped table-bordered table-hover dataTables-example">
  <thead>
    <tr>
      <th>Description</th>
      <th>Instructions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @score_types.each do |score_type| %>
      <tr>
        <td><%= score_type.description %></td>
        <td>
          <div class="form-group" style=" border: 1px solid #e5e6e7;">
          <%= score_type.instructions.html_safe %>
          </div>
        </td>
        <td><%= link_to 'Show', score_type %></td>
        <td><%= link_to 'Edit', edit_score_type_path(score_type) %></td>
        <td><%= link_to 'Destroy', score_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
</div>
