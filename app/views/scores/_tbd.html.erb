<div class="row  white-bg page-heading">
    <div class="col-lg-8 col-lg-offset-1">
        <h2>USAASC Virtual Boards <%= ENV["APP_VERSION"] %></h2>
        <ol class="breadcrumb">
            <li>
                <a href="<%= url_for :controller => 'landing', :action => 'index' %>">Home</a>
            </li>
            <li>
                <a href="<%= url_for :controller => 'boards', :action => 'list' %>">Virtual Board Scoring</a>
            </li>
            <li class="active">
                <strong><%= @board.description %></strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
      <div class="title-action">
      <% if current_user.nil? %>
        <%= link_to new_user_session_path do %><i class="fa fa-sign-in"></i> Signin<% end %>
      <% else %>
        <%= link_to destroy_user_session_path, :method => :delete do %><i class="fa fa-sign-out"></i> Signoff<% end %>
      <% end %>
      </div>
    </div>
</div>

<div class="row page-heading">
</div>

<div class="row">
    <div class="col-lg-10 col-lg-offset-1">
      <p id="notice"><%= notice %></p>
    </div>
</div>


<%= form_tag "/scores" do  %>
<%= hidden_field_tag :board_id, @board.id %>
<div class="row">
    <div class="col-lg-10 col-lg-offset-1">
        <div class="ibox float-e-margins">
          <div class="ibox-title">
              <h4>Virtual Board Scoring - <%= @board.description %></h4>
          </div>
          <div class="ibox-content">
            <div class="row">
            <h4>Scoring Method</h4>

            <p> TBD </p>
            <div class="hr-line-solid"></div>
            </div>

            <% @award_options.find_each do |aw|  %>
            <div class="row">
              <h4> <%= aw.name %> </h4>
              <div class="hr-line-dashed"></div>
              <table class="table table-striped table-bordered table-hover dataTables-example">

                <tbody>
Not Available 

                </tbody>
              </table>
            </div>

            <% end %>

            <div class="row">
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <div class="col-sm-12">
                    <button class="btn btn-primary" type="submit">Save Score</button>
                    <%= link_to "Cancel", :controller => :boards, :action => :list, :id => "open-contacts-dialog-btn",
    :class => "btn btn-white", :method => :get %>

                </div>
            </div>
          </div>


          </div>
        </div>
    </div>
</div>
<% end %>
