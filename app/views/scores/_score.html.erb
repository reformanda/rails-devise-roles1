<div class="row  white-bg page-heading">
    <div class="col-lg-8 col-lg-offset-1">
        <h2>USAASC Virtual Boards <%= ENV["APP_VERSION"] %></h2>
        <ol class="breadcrumb">
            <li>
                <a href="<%= url_for :controller => 'landing', :action => 'index' %>">Home</a>
            </li>
            <li>
                <a href="<%= url_for :controller => 'boards', :action => 'list' %>">Virtual Board Scoring</a>
            </li>
            <li class="active">
                <strong><%= @board.description %></strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
      <div class="title-action">
      <% if current_user.nil? %>
        <%= link_to new_user_session_path do %><i class="fa fa-sign-in"></i> Signin<% end %>
      <% else %>
        <%= link_to destroy_user_session_path, :method => :delete do %><i class="fa fa-sign-out"></i> Signoff<% end %>
      <% end %>
      </div>
    </div>
</div>

<div class="row page-heading">
</div>

<div class="row">
    <div class="col-lg-10 col-lg-offset-1">
      <p id="notice"><%= notice %></p>
    </div>
</div>

<%= form_tag "/scores" do  %>
<%= hidden_field_tag :board_id, @board.id %>
<div class="row">
    <div class="col-lg-10 col-lg-offset-1">
        <div class="ibox float-e-margins">
          <div class="ibox-title">
              <h4>Virtual Board Scoring - <%= @board.description %></h4>
          </div>
          <div class="ibox-content">



            <% case @board.score_type_id %>
            <% when 1 then %>


                <h4>Scoring Method</h4>
                <%= @score_type.instructions.html_safe %>
                <p>This board will remain open until midnight of <%= @board.end_date.strftime("%A, %m/%d/%Y") %>.
                  You may login to check or edit your scoring until the board closes.
                </p>
                <div class="hr-line-solid"></div>


                  <%= render :partial => "score_1" %>

                  <div class="row">
                  <div class="hr-line-dashed"></div>
                  <div class="form-group">
                      <div class="col-sm-12">
                          <button class="btn btn-primary" type="submit">Save Score</button>
                          <%= link_to "Cancel", :controller => :boards, :action => :list, :id => "open-contacts-dialog-btn",
          :class => "btn btn-white", :method => :get %>

                      </div>
                  </div>
                </div>

            <% else %>

            <div class="row">
            <h4>Scoring Method</h4>
            <%= @score_type.instructions.html_safe %>
            <% @end_date = @board.end_date.nil? ? "" : "This board will remain open until midnight of " + @board.end_date.strftime("%A, %m/%d/%Y") + ". " %>
            <p><%= @end_date %> You may login to check or edit your scoring until the board closes.
            </p>
            <div class="hr-line-solid"></div>
            </div>
                  <%= render :partial => "tbd" %>
            <% end %>



          </div>
        </div>
  </div>
</div>
<% end %>
