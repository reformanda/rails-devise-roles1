
  <% @award_options.find_each do |aw|  %>

      <h4> <%= aw.name %> </h4>
      <div class="hr-line-dashed"></div>
      <% @noms = @nominations.where("award_option_id = ?", aw.id) %>
      <table class="table table-striped table-bordered table-hover dataTables-example">
        <thead>
          <tr>
            <th>Organization/Team Name</th>
            <th>Submission Packet</th>
            <th>1. Talent Management Focus<br/>(1-20 points)</th>
            <th>2. Leadership and Knowledge Transfer Efforts<br/>(1-20 points)</th>
            <th>3. Workforce Development Initiatives<br/>(1-20 points)</th>
            <th>4. Recognition Initiatives<br/>(1-20 points)</th>
            <th>5. Best Practices<br/>(1-10 points)</th>
            <th>6. Overall Assessment of Positive Impact<br/>(1-10 points)</th>
            <th>7. Additional Information<br/>(up to 5 bonus points)</th>
          </tr>
        </thead>
        <tbody>
          <% if @noms.empty? %>
            <tr>
              <td colspan="9">
                <p> No Nominations to Score</p>
              </td>
            </tr>
          <% else %>
            <% @noms.find_each do |nom| %>

              <% score = @scores.where("nomination_id = ?", nom.id).first || Score.new %>
              <%= render "score_2_nominations", :nom => nom, :score => score %>


            <% end %>
          <% end %>
        </tbody>
      </table>

  <% end %>
