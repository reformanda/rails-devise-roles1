
<% score_any = false %>
<% @award_options.find_each do |aw|  %>
  <% @noms = @nominations.where("award_option_id = ?", aw.id) %>
  <% not_completed = 0 %>
  <% if not @noms.empty? %>
    <% score_any = true %>
    <h4> <%= aw.name %>  &nbsp;&nbsp;<%= @noms.count %> Nominations  <span id="not_completed_<%= aw.id %>"></span> </h4>
    <div class="hr-line-dashed"></div>
    <table class="table table-striped table-bordered table-hover dataTables-example">
      <thead>
        <tr>
          <th scope="col">Organization / Team Name</th>
          <th scope="col">Submission Packet</th>
          <th scope="col">1. Talent Management Focus<br/>(1-20 points)</th>
          <th scope="col">2. Leadership and Knowledge Transfer Efforts<br/>(1-20 points)</th>
          <th scope="col">3. Workforce Development Initiatives<br/>(1-20 points)</th>
          <th scope="col">4. Recognition Initiatives<br/>(1-20 points)</th>
          <th scope="col">5. Best Practices<br/>(1-10 points)</th>
          <th scope="col">6. Overall Assessment of Positive Impact<br/>(1-10 points)</th>
          <th scope="col">7. Additional Information<br/>(up to 5 bonus points)</th>
          <th scope="col">Total</th>
        </tr>
      </thead>
      <tbody>
        <% if @noms.empty? %>
          <tr>
            <td colspan="10">
              <p> No Nominations to Score</p>
            </td>
          </tr>
        <% else %>
          <% @noms.find_each do |nom| %>

            <% score = @scores.where("nomination_id = ?", nom.id).first || Score.new %>
            <% if score.score_1.blank? || score.score_2.blank? || score.score_3.blank? || score.score_4.blank? || score.score_5.blank? || score.score_6.blank? %>
              <% not_completed = not_completed + 1 %>
            <% end %>
            <%= render "score_2_nominations", :nom => nom, :score => score, :aw => aw.id %>


          <% end %>
        <% end %>
      </tbody>
    </table>
  <% end %>
  <%= hidden_field_tag "not_completed_#{aw.id}_cnt", not_completed, class: "not_completed" %>
<% end %>

<% if not score_any %>
  <h4>There are no nominations to score at this time.</h4>
<% end %>
